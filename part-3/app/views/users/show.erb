<h1>Profile</h1>
<nav>
    <ul>
      <li><a href="/auctions/new">Add an Auction</a> </li>
    </ul>
</nav>
<div class="auction-display">
<h2>Your Auction Items</h2>
  <ul>
    <% @user.auctions.each do | auction | %>
      <li><a href="/auctions/<%= auction.id %>"><%= auction.name %></a></li>
      <li><a href="/auctions/<%= auction.id %>/edit">Edit</a></li>
      <form class="delete-auction" action="/auctions/<%= auction.id %>"  method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="submit" value="Delete">
      </form>
    <% end %>
  </ul>
