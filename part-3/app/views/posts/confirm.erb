<div class="container">
  <h1>Confirm Auction</h1>
</div>

<div class="container">
  <form class="confirm-art-form" action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="put">

    <p><label>Title:
      <input type="text" name="post[title]" value="<%= @post.title %>">
    </label></p>

    <p><label>Description:
      <input type="text" name="post[description]" value="<%= @post.description %>">
    </label></p>

    <p><label>Condition:
      <input type="text" name="post[condition]" value="<%= @post.condition %>">
    </label></p>

    <p><label>Start Time:
      <input type="text" name="post[start]" value="<%= @post.start.to_s %>">
    </label></p>

    <p><label>End Time:
      <input type="text" name="post[end]" value="<%= @post.end.to_s %>">
    </label></p>

    <p><input type="submit" name="submit" value="Create Auction"></p>
  </form>

  <form class="delete-post-form" action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" name="submit" value="Cancel Auction">
  </form>

  <h1>Does everything look correct?</h1>
</div>
