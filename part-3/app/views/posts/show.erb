<div class="container">
  <h1>Title: <%= @post.title %></h1>
  <h3>User: <a href="/users/<%= @post.user.id %>"><%= @post.user.user_name %></a></h3>
</div>


<div class="container">
  <h3>Description: <%= @post.description %></h3>
  <h3>Condition: <%= @post.condition %></h3>
  <h3>Auction starts on: <%= @post.start %></h3>
  <h3>Auction ends on: <%= @post.end %></h3>
</div>

<% if session[:id] && session[:id] != @post.user_id %>
  <div class="bid-partial">
    <%= erb :"posts/_bid", layout: false %>
  </div>
<% end %>
