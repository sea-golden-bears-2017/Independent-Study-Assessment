<div class="container">
  <h1>New Auction</h1>
</div>

<div class="container">
  <form class="new-art-form" action="/posts" method="post">

    <p><label>Title:
      <input type="text" name="post[title]" value="">
    </label></p>

    <p><label>Description:
      <input type="text" name="post[description]" value="">
    </label></p>

    <p><label>Condition:
      <input type="text" name="post[condition]" value="">
    </label></p>

    <p><label>Start Time:
      <input type="datetime-local" name="post[start]" value="">
    </label></p>

    <p><label>End Time:
      <input type="datetime-local" name="post[end]" value="">
    </label></p>

    <p><input type="submit" name="submit" value="Create Auction"></p>
  </form>
</div>
